{
    "version": 2,
    "builds": [
      { "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "/frontend/build" } },
      { "src": "/backend/server.js", "use": "@vercel/node" }
    ],
    "rewrites": [
      { "source": "/api/(.*)", "destination": "/backend/server.js" },
      { "source": "(.*)", "destination": "/index.html" }
    ]
  }